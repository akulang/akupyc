{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Aku",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#multiline"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#boolean"
		},
		{
			"include": "#function"
		},
		{
			"include": "#identifier"
		},
		{
			"include": "#hex"
		},
		{
			"include": "#number"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#character"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.aku",
				"match": "\\b(if|elif|else|import|while|for|return|include|extern|struct|typedef|goto|label|func)\\b"
			}]
		},
		"function": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "[a-zA-Z][a-zA-Z0-9_]*\\("
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type.aku",
				"match": "@[a-zA-Z][a-zA-Z0-9_]*"
			}]
		},
		"boolean": {
			"patterns": [{
				"name": "constant.language",
				"match": "\\b(true|false|nil)\\b"
			}]	
		},
		"identifier": {
			"patterns": [{
				"name": "variable.aku",
				"match": "[a-zA-Z][a-zA-Z0-9_]*"
			}]
		},
		"hex": {
			"patterns": [{
				"name": "constant.numeric.hex.aku",
				"match": "0x[A-Fa-f0-9]+"
			}]
		},
		"number": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "[0-9]+"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.aku",
				"match": "//.*$"
			}]
		},
		"multiline": {
			"name": "comment.block.aku",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"strings": {
			"name": "string.quoted.double.aku",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aku",
					"match": "\\\\."
				},
				{
					"name": "constant.language.aku",
					"match": "%."
				}
			]
		},
		"character": {
			"name": "string.quoted.single.aku",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.aku",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.aku"
}